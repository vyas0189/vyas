{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		// Use Astro's JSX handling so .astro files keep native HTML attributes like `class`.
		"jsx": "preserve",
		"types": ["astro/client"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
